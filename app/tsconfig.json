{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}